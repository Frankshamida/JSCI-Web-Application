<?xml version="1.0" encoding="UTF-8"?>
<widget
    android-versionCode="3"
    id="com.JSCIApps2.JSCIApp2"
    version="3.0.0"
    xmlns="http://www.w3.org/ns/widgets">

    <name>JSCI Mobile App</name>
    <description>
        JSCI Mobile Application
    </description>  
    <author>
        Frank Gomez                                          
    </author>

    <preference name="Orientation" value="portrait" />
    
    <!-- Set Login as entry point -->
    <content src="entry-point.html" />
    
    <!-- Allow navigation between all pages -->
    <access origin="*" />
    <allow-navigation href="*.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    
    <!-- Add CSP for security -->
    <meta http-equiv="Content-Security-Policy" 
          content="default-src 'self' https://script.google.com https://cdnjs.cloudflare.com 'unsafe-inline' 'unsafe-eval' data: gap: https://ssl.gstatic.com; 
                   style-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com; 
                   script-src 'self' 'unsafe-inline' 'unsafe-eval' https://script.google.com" />
    

</widget>